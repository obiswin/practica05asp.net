@model IEnumerable<Empresa22.Models.Categorium>

@{
    ViewData["Title"] = "Index";
}

<h1>TABLA DE CATEGORIAS</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table id="btcliente" class="table table-bordered" style="width:100%;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.CategoriaId">Edit</a> |
                <a asp-action="Details" class="btn btn-danger" asp-route-id="@item.CategoriaId">Details</a> |
                <a asp-action="Delete"  class="btn btn-warning" asp-route-id="@item.CategoriaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {

    <script>

        $(document).ready(function () {
            let table = new DataTable('#btcliente');
        });
    </script>


}
