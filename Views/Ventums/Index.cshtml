@model IEnumerable<Empresa22.Models.Ventum>

@{
    ViewData["Title"] = "Index";
}

<h1>TABLA DE VENTAS</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table id="btcliente" class="table table-bordered" style="width:100%;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detalle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empleado.Nombre)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.VentaId">Edit</a> 
                <a asp-action="Details" class="btn btn-danger" asp-route-id="@item.VentaId">Details</a> 
                <a asp-action="Delete" class="btn btn-warning" asp-route-id="@item.VentaId">Delete</a>
                
                <a asp-action="Delete" class="btn btn-danger" href="../Views/DetalleVentums/Index.cshtml">ImprimirD</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {

    <script>

        $(document).ready(function () {
            let table = new DataTable('#btcliente');
        });
    </script>

}
